@model Cart
<div>
    @if(Model?.Lines.Count() > 0){
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(l => l.Quantity) item(s)
            @Model?.ComputeTotalValue().ToString("c")
        </small>
    }

    <a asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()" class="btn btn-sm btn-secondary navbar-btn">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>