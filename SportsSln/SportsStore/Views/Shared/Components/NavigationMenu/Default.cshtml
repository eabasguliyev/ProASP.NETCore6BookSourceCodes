@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" 
        asp-route-category=""
        class='btn @(string.IsNullOrWhiteSpace(ViewBag.SelectedCategory) ? "btn-primary": "btn-outline-secondary")'>
        Home 
    </a>

    @foreach (string category in Model ?? Enumerable.Empty<string>())
    {
        <a asp-controller="Home" asp-action="Index" 
            asp-route-category="@category"
            asp-route-productPage="1"
            class='btn @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-outline-secondary")'>
            @category 
        </a>
    }
</div>